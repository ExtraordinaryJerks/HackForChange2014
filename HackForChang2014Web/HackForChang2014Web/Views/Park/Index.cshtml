@model HackForChang2014Web.Models.ParkView
@{
    ViewBag.Title = Model.Park.Name;
}
<a href="/">Back to park listing</a>
<h3>@Model.Park.Name</h3>
<div class="row">
    <div>
        <h1>Park Total Safety Index:<span id="totalIndex"></span></h1>
        <h4><span id="indexMessage"></span></h4>
    </div>
</div>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Real Time Safety Index</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <h3>Current Temperature(F):</h3>
            </div>
            <div class="col-md-3">
                <h2><span class="label label-default" id="lblTemperature"></span></h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h3>Current Light and Visibility Percentage(0-100):</h3>
            </div>
            <div class="col-md-3">
                <h2><span class="label label-default" id="lblLightLevel"></span></h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h3>Crowd Average Safety Index(Last 15 Minutes):</h3>
            </div>
            <div class="col-md-3">
                <h2><span class="label label-default" id="lblAverage"></span></h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h3>Visitor Activity Total(Last 24 Hours):</h3>
            </div>
            <div class="col-md-3">
                <h2><span class="label label-default" id="lblTotal"></span></h2>
            </div>
        </div>
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Police Safety Index <span class="label label-success">(+@(Model.PoliceStations.Count * 5))</span> </h3>
    </div>
    <div class="panel-body">
        <h3>
            Within 5 mile radius
        </h3>
        <ul class="list-group">
            @if (Model.PoliceStations != null && Model.PoliceStations.Count > 0)
            {
                foreach (var police in Model.PoliceStations)
                {
                    <li class="list-group-item">
                        <h4>@police.Name</h4>
                    </li>
                }
            }
            else
            {
                <h4>No police stations nearby!</h4>
            }
        </ul>
    </div>
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Fire Station Safety Index <span class="label label-success">(+@Model.FireStattions.Count)</span></h3>
    </div>
    <div class="panel-body">
        <h3>
            Within 5 mile radius
        </h3>
        <ul class="list-group">
            @if (Model.FireStattions != null && Model.FireStattions.Count > 0)
            {
                foreach (var fireStation in Model.FireStattions)
                {
                    <li class="list-group-item">
                        <h4>@fireStation.Name</h4>
                    </li>
                }
            }
            else
            {
                <h4>No fire stations nearby!</h4>
            }
        </ul>
    </div>
</div>

<input id="hideInformation" type="hidden" data-policeindex="@Model.PoliceStations.Count" data-fireindex="@Model.FireStattions.Count" />

@section scripts
{
    <script type="text/javascript" src="/Scripts/Main.js"></script>
}